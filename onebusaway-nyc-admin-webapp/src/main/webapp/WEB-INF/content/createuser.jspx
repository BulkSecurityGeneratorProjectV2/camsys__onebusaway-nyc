<html xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:s="/struts-tags">
<jsp:directive.page contentType="text/html" />
<head>
<s:url var="url" value="/css/admin.css"/>
<link rel="stylesheet" href="${url}" type="text/css"/>
</head>
<body>
	<h2>Create User</h2>
	<div>
		<s:form action="register-user" namespace="/admin" id="mainbox">
			
			<div>
				<label style="width:100px;">User Name :</label>
				<s:textfield name="username" required="true"/>
			</div>
			<div>
				<label style="width:100px;">Password :</label>
				<s:textfield name="password" required="true"/>
			</div>
			<div>
				<label style="width:100px;">Is Admin?</label>
				<s:checkbox name="admin"/>
			</div>
			<s:submit align="left"/>
		</s:form>
		<s:actionmessage />
	</div>
</body>
</html>