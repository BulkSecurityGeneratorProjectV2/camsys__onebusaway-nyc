<html xmlns:jsp="http://java.sun.com/JSP/Page"
    xmlns:c="http://java.sun.com/jsp/jstl/core"
    xmlns:fmt="http://java.sun.com/jsp/jstl/fmt">
	<jsp:directive.page contentType="text/html" />
  <head>
    <meta charset="utf-8" />
    <title>GTFS Shape Viewer</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="" />
    <meta name="author" content="" />

	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"><!-- //prevent jspx minimization --></script>
	<script src='http://openlayers.org/api/OpenLayers.js'><!-- //prevent jspx minimization --></script>

    <!-- Le styles -->
    <link href="assets/css/bootstrap.min.css" rel="stylesheet"><!-- //prevent jspx minimization --></link>
    <style>
    	body {
        	padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      	}
		#map {
			width: 100%;
			height: 800px;
			border: 1px solid black;
		}	      
    </style>

  </head>
 
  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="#">GTFS Network Viewer</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li><a href="#" onclick="selectShape('*');">Reset</a></li>
              <li><a href="#about">Raw</a></li>
              <li><a href="#contact">Processed</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
		<div class="row-fluid">
			<div class="span3">
				<h2>Shapes</h2>
				<ul>
            		<c:forEach var="shape" items="${shapes}">
						<li onclick="selectShape('${shape}');">${shape}</li>
					</c:forEach>				
				</ul>
			</div>
			<div class="span9">
				<div id="map"></div>
			</div>
		</div>

    </div> <!-- /container -->

    <!-- Placed at the end of the document so the pages load faster -->
    <script src="assets/js/bootstrap.min.js"><!-- //prevent jspx minimization --></script>
    <script src="assets/js/map.js"><!-- //prevent jspx minimization --></script>

	<script type="text/javascript">
	$(document).ready(function() {
		createMap('map', ${map_center_x}, ${map_center_y});
		});
	</script>
  </body>
</html>
