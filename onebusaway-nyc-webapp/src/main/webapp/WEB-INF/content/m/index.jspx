<html xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:c="http://java.sun.com/jsp/jstl/core" 
	xmlns:s="/struts-tags"
	xmlns:wiki="/oba-wiki-tags">
<jsp:directive.page contentType="text/html" />
<head>
	<meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>
	<meta name="viewport" content="width=device-width,initial-scale=.90,user-scalable=no"/>  

	<title>MTA Bus Time<s:property value="title"/></title>
	
  	<link rel="shortcut icon" href="http://mta.info/siteimages/favicon.ico" type="image/x-icon"/>

  	<s:url var="url" value="/css/mobile/mobile.css"></s:url>
  	<link rel="stylesheet" href="${url}" type="text/css" media="screen"/>

  	<s:url var="url" value="/css/mobile/branding.css"></s:url>
  	<link rel="stylesheet" href="${url}" type="text/css" media="screen"/>

	<s:url var="url" value="/js/lib/jquery.js"/>
	<script type="text/javascript" src="${url}"><!-- //prevent jspx minimization --></script>

	<s:url var="url" value="/js/oba/m/Location.js"/>
	<script type="text/javascript" src="${url}"><!-- //prevent jspx minimization --></script>
</head>

<body>
	<div id="branding">
		<s:url var="url" namespace="/m" action="index">				
			<s:param name="l"><s:property value="l" /></s:param>
		</s:url>
	    <h1><a href="${url}">MTA Bus Time</a></h1>
	</div>

	<div id="searchPanel">
		<s:form namespace="/m" action="index" method="GET">
			<input type="text" name="q" class="q" value="${q}"/>
			<input type="submit" class="s" value="Find" id="submitButton"/>

			<input type="hidden" name="l" id="l" value="${l}"/>
		</s:form>

		<small>TIP: Enter an intersection, bus route or bus stop code.</small>
	</div>

	<div id="content">
		<s:if test="%{results.empty}">
			<c:import url="welcome.jspx"/>
		</s:if>
		<s:else>
			<s:if test="%{results.suggestions.size&gt;0}">
				<!-- route search with no direct matches -->
				<s:if test="results.resultType.equals('RouteResult')">
					<c:import url="route-suggestion-picker.jspx"/>
				</s:if>
	
				<!-- amigbuous address -->
				<s:elseif test="results.resultType.equals('GeocodeResult')">
						<c:import url="geocode-result.jspx"/>
				</s:elseif>
			</s:if>	
	
			<s:if test="%{results.matches.size&gt;0}">
				<s:if test="results.resultType.equals('RouteResult')">
					<c:import url="route-result.jspx"/>
				</s:if>
				<s:elseif test="results.resultType.equals('RouteInRegionResult')">
						<c:import url="route-in-region-picker.jspx"/>
				</s:elseif>
				<s:elseif test="results.resultType.equals('StopResult')">
					<c:import url="stop-result.jspx"/>
				</s:elseif>
			</s:if>
		</s:else>
	</div>
	
	<div id="footer">
    	<p>
			<s:url var="mobileHelpUrl" namespace="/wiki" action="Mobile/Help"/>	
    		<a href="${mobileHelpUrl}">Help</a> | 
    		
    		<s:url var="desktopUrl" namespace="/" action="index"/>	
    		<a href="${desktopUrl}">Desktop Site</a> |
    		
    		<s:url var="contactUrl" namespace="/wiki" action="ContactUs"/>	
    		<a href="${contactUrl}">Contact</a> |

			<a href="http://www.mta.info">MTA.info</a>
		</p>
	</div>

	<img src="${googleAnalyticsTrackingUrl}" alt=""/>
	
	<s:url var="url" value="/m/color-stylesheet">
  		<s:param name="colors"><s:property value="routeColors" /></s:param>
  	</s:url>
  	<link rel="stylesheet" href="${url}" type="text/css" media="screen"/>
</body>
</html>
