<html xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:s="/struts-tags"
	xmlns:wiki="/oba-wiki-tags">

<s:iterator value="results.matches">
	<!--  table of contents -->
	<div>
		<p>
			<strong>
				Routes:
			</strong>
		</p>

		<s:iterator value="directions">
			<s:url var="url" value="" anchor="%{directionId}"></s:url>
			<a href="${url}">
				<s:property value="shortName" />&amp;nbsp;<s:property value="destination" />
			</a>
			<br />
		</s:iterator>
	</div>

	<s:iterator value="directions">
		<div>
			<p>
				<a name="${directionId}"><!--prevent JSP minimization--></a>
				<strong>
					<s:property value="shortName" />&amp;nbsp;<s:property value="destination" />
				</strong> 
				<br />
			</p>

			<c:choose>
				<c:when test="${!hasUpcomingScheduledService}">
					<p class="noService">
						No scheduled service for the <s:property value="shortName" /> to <s:property value="destination" /> at this time.
					</p>
				</c:when>
			</c:choose>
			
			<ul>
				<s:iterator value="serviceAlerts">
					<li class="alert"><s:property value="value" escape="false"/></li>
				</s:iterator>
			</ul>

			<ul>
				<s:iterator value="stops">
					<li>
						<c:choose>
							<c:when test="${!empty distanceAways}">
								<s:url var="url" namespace="/m" action="index">
									<s:param name="q">
										<s:property value="idWithoutAgency" />
									</s:param>
									<s:param name="l"><s:property value="l" /></s:param>
								</s:url>
								<strong>
									<a title="${name}" href="${url}">
										<s:property value="name" />
									</a> 
								</strong>
								&amp;nbsp;<s:property value="distanceAways" />
							</c:when>
							<c:otherwise>
								<s:url var="url" namespace="/m" action="index">
									<s:param name="q">
										<s:property value="idWithoutAgency" />
									</s:param>
									<s:param name="l"><s:property value="l" /></s:param>
								</s:url>
								<a title="${name}" href="${url}">
									<s:property value="name" />
								</a> 
							</c:otherwise>
						</c:choose>
					</li>
				</s:iterator>
			</ul>
		</div>
	</s:iterator>
</s:iterator>

</html>
