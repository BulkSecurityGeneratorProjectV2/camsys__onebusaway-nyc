<html xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:s="/struts-tags"
	xmlns:wiki="/oba-wiki-tags">
<jsp:directive.page contentType="text/html" />
<head>

<s:url var="url" value="/css/map/map.css"></s:url>
<link rel="stylesheet" href="${url}" type="text/css" media="screen,print"/>

<s:url var="url" value="/css/map/popup.css"></s:url>
<link rel="stylesheet" href="${url}" type="text/css" media="screen,print"/>

<script src="http://maps.google.com/maps/api/js?sensor=true" type="text/javascript"><!-- //prevent jspx minimization --></script>

<s:url var="url" value="/js/lib/jquery.ui.js"/>
<script type="text/javascript" src="${url}"><!-- //prevent jspx minimization --></script>

<s:url var="url" value="/js/lib/jquery.history.js"/>
<script type="text/javascript" src="${url}"><!-- //prevent jspx minimization --></script>

<s:url var="url" value="/js/lib/markerManager.js"/>
<script type="text/javascript" src="${url}"><!-- //prevent jspx minimization --></script>

<s:url var="url" value="/api/config"/>
<script type="text/javascript" src="${url}"><!-- //prevent jspx minimization --></script>

<s:url var="url" value="/js/oba/Util.js"/>
<script type="text/javascript" src="${url}"><!-- //prevent jspx minimization --></script>

<s:url var="url" value="/js/oba/map/RouteMap.js"/>
<script type="text/javascript" src="${url}"><!-- //prevent jspx minimization --></script>

<s:url var="url" value="/js/oba/map/Sidebar.js"/>
<script type="text/javascript" src="${url}"><!-- //prevent jspx minimization --></script>

</head>
<body>
<div id="content" class="map">
    <div id="searchbar">
       <form action="search.action">
         <input type="text" name="q" value=""/>  
         <input type="submit" value="Search" class="submit"/>
       </form>
       
       <div id="results">
       	 <h2>Did you mean...</h2>

         <ul></ul>
       </div>
	            
	   <div id="legend">
       	 <h2>Nearby routes:</h2>

		 <ul></ul>
	   </div>

	   <div id="no-results">
       	 <h2>No results.</h2>
	   </div>

	   <div id="welcome">
		 <h2>Try these example searches:</h2>
		 
		 <ul>
		 	<li>Route: <a href="#B63">B63</a></li>
		 	<li>Intersection: <a href="#Atlantic Ave and Hoyt St">Atlantic Ave and Hoyt St</a></li>
		 	<li>Stop ID: <a href="#305394">305394</a></li>
		 	<li>Location: <a href="#10003">10003</a> or <a href="#Staten Island">Staten Island</a></li>
		 </ul>
	   </div>

    </div>

	<div id="map"></div>
</div>
</body>
</html>
