<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- NOTE This file exists ONLY to facilitate hbm2ddl, not used in app execution -->
<hibernate-configuration>
    <session-factory>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>

        <!-- Database connection settings -->
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.url">jdbc:hsqldb:data/onebusaway_nyc</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="connection.shutdown">true</property>

        <!-- JDBC connection pool (use the built-in one) -->
        <property name="connection.pool_size">1</property>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">
            org.hibernate.cache.NoCacheProvider
        </property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- disable batching so HSQLDB will propagate errors correctly. -->
        <property name="jdbc.batch_size">0</property>
        
        <property name="hibernate.hbm2ddl.auto">create</property>

        <!-- List all the mapping documents we're using -->
 		<mapping class="org.onebusaway.nyc.vehicle_tracking.model.DestinationSignCodeRecord"/>
		<mapping class="org.onebusaway.nyc.vehicle_tracking.model.NycVehicleLocationRecord"/>
		<mapping class="org.onebusaway.nyc.vehicle_tracking.model.UtsRecord"/>
		
		        <mapping class="org.onebusaway.geocoder.model.GeocoderResultsEntity"/>
		<mapping class="org.onebusaway.transit_data_federation.impl.realtime.BlockLocationRecord"/>
		<mapping class="org.onebusaway.gtfs.model.Route"/>
		<mapping class="org.onebusaway.gtfs.model.Agency"/>
 		<mapping class="org.onebusaway.transit_data_federation.model.RouteCollection"/>
		<mapping class="org.onebusaway.users.model.User"/>
		<mapping class="org.onebusaway.users.model.UserIndex"/>
		<mapping class="org.onebusaway.users.model.UserRole"/>
		
    </session-factory>
</hibernate-configuration>
