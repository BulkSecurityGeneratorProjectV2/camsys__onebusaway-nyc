<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>onebusaway-nyc-transit-data-manager</artifactId>
		<groupId>org.onebusaway</groupId>
		<version>2.0.3-SNAPSHOT</version>
	</parent>
	<groupId>org.onebusaway</groupId>
	<artifactId>onebusaway-nyc-tdm-service</artifactId>
	<version>2.0.3-SNAPSHOT</version>
	<name>onebusaway-nyc-tdm-service</name>
	<description>TDM API</description>
	<packaging>war</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<dependencies>


		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-server</artifactId>
			<version>8.0.1.v20110908</version>
		</dependency>
		<dependency>
			<groupId>com.sun.jersey</groupId>
			<artifactId>jersey-server</artifactId>
			<version>1.9.1</version>
		</dependency>
		<dependency>
			<groupId>org.onebusaway</groupId>
			<artifactId>onebusaway-nyc-tdm-adapters</artifactId>
			<version>2.0.3-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.onebusaway</groupId>
			<artifactId>onebusaway-nyc-tcip-api-v305</artifactId>
			<version>2.0.3-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.sun.jersey.contribs</groupId>
			<artifactId>jersey-spring</artifactId>
			<version>1.9.1</version>
		</dependency>

		<dependency>
			<groupId>org.onebusaway</groupId>
			<artifactId>onebusaway-container</artifactId>
			<version>2.0.5-SNAPSHOT</version>
		</dependency>
	</dependencies>
	
	<profiles>
		<profile>
			<id>local</id>
			<properties>
				<tdm.dataPath>d:\</tdm.dataPath>
				<tdm.crewAssignFilename>CrewAssignSample.csv</tdm.crewAssignFilename>
				<tdm.depotAssignFilename>DOB_draft_depot_assignments.xml</tdm.depotAssignFilename>
				<tdm.pipoFilename>CrewAssignSample.csv</tdm.pipoFilename>
				<tdm.dscFilename>dsc.csv</tdm.dscFilename>
				<tdm.prettyPrintOutput>true</tdm.prettyPrintOutput>
			</properties>
		</profile>
		<profile>
			<id>tdm-staging</id>
			<activation>
                <activeByDefault>true</activeByDefault>
            </activation>
			
			<properties>
				<tdm.dataPath>/mnt/data/tdm_input/upload/mta</tdm.dataPath>
				<tdm.crewAssignFilename>/crew_assign/CIS.txt</tdm.crewAssignFilename>
				<tdm.depotAssignFilename>/depot_assigns/DOB_draft_depot_assignments.xml</tdm.depotAssignFilename>
				<tdm.pipoFilename>/vehicle_pipo/UTSPUPUFULL.txt</tdm.pipoFilename>
				<tdm.dscFilename>/dsc/dsc.csv</tdm.dscFilename>
				<tdm.prettyPrintOutput>false</tdm.prettyPrintOutput>
			</properties>
		</profile>
	</profiles>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>8.0.1.v20110908</version>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2.1</version>
				<executions>
					<execution>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>org.onebusaway.nyc.transit_data_manager.api.HelloWorld</mainClass>
				</configuration>
			</plugin>
		</plugins>
		
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/main/default-resources</directory>
				<filtering>true</filtering>
			</resource>
		
		</resources>
		
	</build>
</project>
