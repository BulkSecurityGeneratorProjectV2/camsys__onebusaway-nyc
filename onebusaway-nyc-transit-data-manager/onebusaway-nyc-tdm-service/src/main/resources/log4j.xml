<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- 0 or more renderer elements -->

	<!-- 0 or more appender elements -->

	<appender name="ROLL" class="org.apache.log4j.rolling.RollingFileAppender">
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="FileNamePattern" value="${obanyc.log.root}/tdm.%d.log" />
		</rollingPolicy>

		<layout class="org.apache.log4j.PatternLayout">
			<!-- The log message pattern -->
			<param name="ConversionPattern" value="%d{ISO8601} %-5p [%F:%L] : %m%n" />
		</layout>
	</appender>

	<!-- 0 or more logger/category elements -->
	
	<logger name="org.onebusaway.nyc.transit_data_manager" additivity="false">
		<level value="debug"/>
		<appender-ref ref="ROLL" />
	</logger>

	<!-- 0 or 1 root elements -->

	<root>
		<priority value="error" />
		<appender-ref ref="ROLL" />
	</root>

	<!-- 0 or 1 categoryFactory elements -->

</log4j:configuration>